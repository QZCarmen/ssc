
<div class="shoppingCart">

</div>

<div class="container p-5 border mt-2 mb-5 bg-light" >
    <div class="row">
        <div class="col-sm bg-white pt-5">
            <div  style="width:250px;margin:auto;">
            <h6>REGISTER</h6>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"logon mt-5") do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-group row">
                      <%= f.label :email ,class:"small"%>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control rounded-0" %>
                  </div>

                  <div class="form-group row">
                    <%= f.label :password,class:"small" %>
                    <% if @minimum_password_length %>
                    <em class="small">(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class:'form-control rounded-0' %>
                  </div>

                  <div class="form-group row">
                    <%= f.label :password_confirmation ,class:"small"%>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control rounded-0"%>
                  </div>

                  <div class="form-group row">
                      <%= f.submit "SUBMIT",class:"btn logon_bg text-white rounded-0", style:"width:300px;" %>
                  </div>
             <% end %>
            </div>
        </div>
        <div class="col-sm lg_bg " style="min-height:400px;padding-top:80px;">

        </div>
    </div>
</div>


