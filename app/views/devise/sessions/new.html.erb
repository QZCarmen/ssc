<div class="shoppingCart">

</div>

<div class="container p-5 border mt-2 mb-5 bg-light" >
    <div class="row">
        <div class="col-sm bg-white pt-5">
            <div  style="width:250px;margin:auto;">
            <h6>ALREDY A MEMEBER ?</h6>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => { :class => 'logon mt-5' }) do |f| %>
                  <div class="form-group row">
                      <%= f.label :email, class:"small"%>
                       <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                  </div>
                  <div class="form-group row">
                      <%= f.label :password ,class:"small" %>
                      <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
                  </div>
                  <div class="form-group row">
                      <%= f.submit "LOG IN",class:"btn logon_bg text-white" %>
                  </div>
              <%end%>
            </div>
        </div>
        <div class="col-sm lg_bg " style="min-height:400px;padding-top:80px;">
                <div>
                    <h4>REGISTER</h4>
                    <p>If you still don't have a sweetcitycandy.ca account, use this option to access the registration form.</p>

                    <%= link_to "BECOME A MEMBER ", new_customer_registration_path, :class => 'btn bg-white rounded-0',:style=>"width:250px;color:pink;"  %>
                </div>
        </div>
    </div>
</div>



