
<div id="galleryCollection" class="carousel slide carousel-multi-item carousel-multi-item-2" data-ride="carousel">

    <div><h3 class="text-center">Shop By Collections</h3></div>

      <div class="controls-top d-flex justify-content-between" >
        <a class="black-text" href="#galleryCollection" data-slide="prev">
            <span class="material-icons">arrow_back_ios</span>
        </a>
        <a class="black-text" href="#galleryCollection" data-slide="next">
          <span class="material-icons">arrow_forward_ios</span>
          </a>
      </div>

      <div class="carousel-inner" role="listbox">
         <% @array.each do |a| %>
            <% if a ==0%>
              <div class="carousel-item active">
            <%else%>
                 <div class="carousel-item ">
            <%end%>
            <div class="container-fluid">
                    <div class="row">
                        <% @collections.slice(a,4).each do |g|%>
                            <div class="col">
                                <div class="card" style="width: 18rem;">
                                    <%= image_tag(g.image.url,class:"card-img-top",alt:g.image) %>
                                    <div class="card-body">
                                        <p class="card-text">  <%= link_to g.name,:controller => "/collections", :action => :show ,:id => g.id%>
                                      </li></p>
                                    </div>
                              </div>
                            </div>
                        <% end %>
                    </div>
                </div>
              </div>
         <% end %>
      </div>

</div>
<!--/.Carousel Wrapper-->